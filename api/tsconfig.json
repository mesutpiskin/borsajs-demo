{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": false,
        "target": "ES2021",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}