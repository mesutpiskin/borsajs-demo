{
    "hosting": {
        "site": "borsajs-showcase",
        "public": "ui/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api",
                "function": {
                    "functionId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "/api/**",
                "function": {
                    "functionId": "api",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            }
        ]
    },
    "functions": [
        {
            "source": "api",
            "codebase": "api",
            "runtime": "nodejs20"
        }
    ]
}